<%= form_for(@scorecard) do |f| %>
<%= f.select :industry, ['Technology', 'Medicine', 'Hospitality', 'Sales']%><br>
<br>
<div class="field">
    <%= f.label :name, "Scorecard Name" %>
    <%= f.text_field :name %>
</div>
<div class="field">
    <%= f.label :position, "Position" %>
    <%= f.text_field :position %>
</div><br>
<%= f.label "Attributes" %>
<div class="field">
    <%= f.text_field :attribute_01, :value=> "Relevant Experience" %>
</div><br>
<div class="field">
    <%= f.text_field :attribute_02, :value=> "Communication Skills" %>
</div><br>
<div class="field">
    <%= f.text_field :attribute_03, :value=> "Knowledge of Company" %>
</div><br>
<div class="field">
    <%= f.text_field :attribute_04, :value=> "Enthusiasm" %>
</div><br>
<div class="field">
    <%= f.text_field :attribute_05, :value=> "Cultural Fit" %>
</div><br>
<div class="actions">
    <%= f.submit %>
</div>
<% end %>
